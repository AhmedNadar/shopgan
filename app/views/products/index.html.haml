%h1 All Products List
%table
  %thead
    %tr
      %th Image
      %th Name
      %th Description
      %th Price
      %th Actions
  %tbody
    - @products.each do |pro|
      %tr
        %td= image_tag "products/#{pro.image_url}"
        %td= pro.title
        %td= pro.description
        %td= pro.price
        %td
          = link_to "Show", product_path(pro)
          = link_to "Delete", product_path(pro), :confirm => "Are you sure you want to delete this product?", :method => :delete

%p= link_to "Create a New Product", new_product_path, id: "new_prodcut"