= form_for @product do |f|
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :price, "Price (like 2.99)"
    %br/
    = f.number_field :price
  .field
    = f.label :image_url
    %br/
    = f.text_area :image_url
  .actions= f.submit